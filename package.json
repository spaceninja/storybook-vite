{
  "name": "storybook-vite",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "build": "run-s build:*",
    "build:tokens": "node ./build-tokens.js",
    "build:scss": "sass --no-source-map src:dist",
    "build:postcss": "postcss dist/*.css -r",
    "watch": "run-s watch:*",
    "watch:tokens": "chokidar \"src/tokens/**/*.+(js|json)\" -c \"npm run build:tokens\"",
    "vite:dev": "vite",
    "vite:build": "vite build",
    "vite:preview": "vite preview",
    "lint": "run-s lint:js lint:css lint:prettier",
    "lint:check": "run-s lint:*:check",
    "lint:js": "eslint --fix . --ext .js,.mdx",
    "lint:js:check": "eslint . --ext .js,.mdx",
    "lint:css": "stylelint --fix '**/*.scss'",
    "lint:css:check": "stylelint '**/*.scss'",
    "lint:prettier": "prettier --write .",
    "lint:prettier:check": "prettier --check .",
    "prepublishOnly": "yarn && yarn lint:check && yarn build"
  },
  "devDependencies": {
    "@babel/core": "^7.17.8",
    "@storybook/addon-actions": "^6.4.19",
    "@storybook/addon-essentials": "^6.4.19",
    "@storybook/addon-links": "^6.4.19",
    "@storybook/html": "^6.4.19",
    "babel-loader": "^8.2.4",
    "chokidar-cli": "^3.0.0",
    "cssnano": "^5.1.5",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-mdx": "^1.17.0",
    "eslint-plugin-react": "^7.29.4",
    "npm-run-all": "^4.1.5",
    "postcss": "8",
    "postcss-cli": "^9.1.0",
    "postcss-inline-svg": "^5.0.0",
    "prettier": "^2.6.0",
    "remark-preset-lint-recommended": "5.0.0",
    "remark-preset-prettier": "0.5.1",
    "sass": "^1.49.9",
    "storybook-builder-vite": "^0.1.21",
    "style-dictionary": "^3.7.0",
    "stylelint": "^14.6.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-spaceninja": "^10.0.0",
    "vite": "^2.8.0"
  }
}
